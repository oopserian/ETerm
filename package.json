{
  "name": "eterm",
  "private": true,
  "version": "0.0.1",
  "main": "dist-electron/main.js",
  "author": {
    "name": "erian lew",
    "email": "oops.erian@gmail.com",
    "url": "https://github.com/catcoal"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/catcoal/eterm"
  },
  "scripts": {
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "dev": "pnpm run dev:electron & pnpm run dev:react",
    "dev:react": "vite",
    "build": "tsc && vite build",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "dev:electron": "pnpm run transpile:electron && cross-env NODE_ENV=development electron .",
    "pack:linux": "pnpm run transpile:electron && pnpm run build && electron-builder --linux --x64",
    "pack:mac": "pnpm run transpile:electron && pnpm run build && electron-builder --mac --arm64",
    "pack:win": "pnpm run transpile:electron && pnpm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.2.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toggle": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.5",
    "@tabler/icons-react": "^3.24.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.0.1",
    "sonner": "^1.7.0",
    "ssh2": "^1.16.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.9.1",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@types/ssh2": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.2.2",
    "vite": "^6.0.3"
  },
  "engines": {
    "pnpm": ">=9.0.0",
    "npm": "pnpm",
    "yarn": "pnpm",
    "node": ">=18.18 <19 || >=20.1"
  },
  "eslintConfig": {
    "root": true
  },
  "packageManager": "pnpm@9.15.1"
}